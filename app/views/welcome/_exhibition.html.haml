- articles.each_with_index do |article,index|
  - if article
    .DoubleTeaser-article{:class => (index==1) ? "DoubleTeaser-article--right" : "" }
      = link_to image_tag(article.title_image_url(:thumb), alt: article.title), article_path(article), class: 'DoubleTeaser-image'
      = link_to article.title, article_path(article), class: 'DoubleTeaser-link' #Kreidetier
      = " von "
      = link_to article.profile_name, user_path(article.seller), class: 'DoubleTeaser-link'